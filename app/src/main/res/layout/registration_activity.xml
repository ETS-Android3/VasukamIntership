<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Registration_Activity"
    android:background="@drawable/pexels_brenoanp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/back_arrow_figma"
        app:tint="@color/white"
        android:id="@+id/backButton"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="104dp"
        android:layout_height="32dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/white_stroke_transparent"
        android:gravity="center"
        android:id="@+id/login"
        android:fontFamily="@font/poppins_medium"
        android:letterSpacing="0.02"
        android:layout_alignParentEnd="true"
        android:text="Log in"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up to join our family"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:fontFamily="@font/poppins_semibold"
        android:id="@+id/tag1"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="150dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="username"
        android:layout_marginTop="275dp"
        android:id="@+id/username"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name"
        android:layout_below="@id/username"
        android:id="@+id/name"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/name"
        android:id="@+id/tag2"
        android:layout_marginStart="30dp">
        <com.hbb20.CountryCodePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ccp_contentColor="@color/white"
            android:id="@+id/ccp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:hint="mobile number"
            android:letterSpacing="0.02"
            android:textSize="18sp"
            android:inputType="number"
            android:paddingStart="4dp"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/phoneNumber"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email"
        android:layout_below="@id/tag2"
        android:id="@+id/email"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="date of birth"
            android:id="@+id/dob"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_toStartOf="@id/calender"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/white"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/calender"
            android:src="@drawable/calendar_figma"
            android:background="@color/transparent"
            android:layout_centerVertical="true"
            app:tint="@color/white"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:text="Next"
        android:layout_marginTop="540dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/white_round_login"
        android:id="@+id/signup"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_below="@id/signup"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="17sp"
        android:letterSpacing="0.02"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/rounded_semi_transparent"
        android:id="@+id/errorText"
        android:textColor="@color/white"
        />
</RelativeLayout>